<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="pane;-title">Company profile</h2>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-6">
            <%= image_tag @company_profile.logo_url, class:
            'img-responsive', alt: @company_profile.company_name + 'logo' %>
          </div>
          <div class="col-md-6">
            <h3><%= @company_profile.company_name %></h3>
            <p class="lead"><%= @company_profile.company_type %></p>
          </div>
        </div>
        <p><strong>Contact name:</strong> <%= @company_profile.contact_name %></p>
        <p><strong>Address</strong> <%=    @company_profile.formatted_address %></p>
        <hr>
        <p><strong>Company info</strong></p>
        <p><%=@company_profile.description %></p>
        <p><strong>Company culture</strong></p>
        <p><%= @company_profile.company_culture %></p>
        <% if @company_profile.user == current_user %>
<%= link_to 'Edit company profile', edit_company_profile_path(@company_profile), class: 'btn btn-warning btn-sm' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
